{
  "name": "BitClout Plus",
  "description": "bitclout.com on steroids",
  "version": "0.4.1",
  "manifest_version": 3,
  "omnibox": {
    "keyword": "bc"
  },
  "content_scripts": [
    {
      "matches": [
        "https://bitclout.com/*"
      ],
      "js": [
        "vendor/tribute/tribute.min.js",
        "vendor/underscore/underscore-umd-min.js",
        "vendor/superscore/superscore.min.js",
        "main.js"
      ],
      "css": [
        "vendor/tribute/tribute.css",
        "main.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/*", "img/*"
      ],
      "matches": [
        "https://bitclout.com/*"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}