{
  "name": "BitClout Plus",
  "description": "bitclout.com on steroids",
  "version": "0.4.0",
  "manifest_version": 3,
  "omnibox": {
    "keyword": "bc"
  },
  "content_scripts": [
    {
      "matches": [
        "https://bitclout.com/*"
      ],
      "js": [
        "vendor/tribute/tribute.min.js",
        "main.js"
      ],
      "css": [
        "vendor/tribute/tribute.css",
        "main.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/*", "img/*"
      ],
      "matches": [
        "https://bitclout.com/*"
      ]
    }
  ]
}